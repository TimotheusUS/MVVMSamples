<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:vm="clr-namespace:SQ15Mar2015_Learning">
    <DataTemplate x:Key="ItemValueDateTemplateBlue" >
        <Border BorderThickness="1" BorderBrush="Blue">
            <StackPanel>
                <TextBlock Text="{Binding Path=ItemValue}" />
                <TextBlock Text="{Binding Path=DateOfGeneration}"/>
            </StackPanel>
        </Border>
    </DataTemplate>
    <DataTemplate x:Key="ItemValueDateTemplateBlueViolet" >
        <Border BorderThickness="1" BorderBrush="BlueViolet">
            <StackPanel>
                <TextBlock Text="{Binding Path=ItemValue}" />
                <TextBlock Text="{Binding Path=DateOfGeneration}"/>
            </StackPanel>
        </Border>
    </DataTemplate>
</ResourceDictionary>
