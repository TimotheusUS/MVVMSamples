<UserControl x:Class="TimotheusUS.MVVMsamples.DynamicGrid.ViewTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Views="clr-namespace:TimotheusUS.MVVMsamples.DynamicGrid"
             xmlns:ViewModels="clr-namespace:TimotheusUS.MVVMsamples.DynamicGrid"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel >
        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding TableData}">
            <DataGrid.Resources>
                <DataTemplate DataType="{x:Type ViewModels:ViewModelStdCell}">
                        <Views:ViewStdCell />
                    </DataTemplate>
                <DataTemplate DataType="{x:Type ViewModels:ViewModelHeaderRowCell}">
                    <Views:ViewHeaderRowCell />
                </DataTemplate>
                <ItemsPanelTemplate x:Key="Template4ItemsPanel">
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.HeaderTemplate>
                        <DataTemplate>
                            <ItemsControl ItemsSource="{Binding RelativeSource={RelativeSource Self}, Path=DataContext.HeaderColumns, Mode=TwoWay}" ItemsControl.ItemsPanel="{StaticResource Template4ItemsPanel}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Width="{Binding Width}" Foreground="{Binding Color}" Text="{Binding Data, Mode=TwoWay}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                    </DataGridTemplateColumn.HeaderTemplate>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ItemsControl ItemsSource="{Binding Row}" ItemsControl.ItemsPanel="{StaticResource Template4ItemsPanel}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="Turquoise" BorderThickness="2">
                                            <ContentControl Content="{Binding}" />
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
